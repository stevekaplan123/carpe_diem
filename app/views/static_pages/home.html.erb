<div class="center jumbotron">
<h1>Welcome to Carpe Diem!</h1>
<br>
<h2>Are you ready to seize the day?</h2>
<br>
<p>Today is <%= Time.now.strftime("%d/%m/%Y") %></p>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: '/users') do |f| %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>

      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>

      <%= f.submit "Sign up for free", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

</div>
