
<p id="notice"><%= notice %></p>

<p>
  <strong>Creator:</strong>
  <%= @creator %>
</p>

<p>
  <strong>Event name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Time occurrence:</strong>
  <%= @event.time_occurrence.utc().to_formatted_s(:long) %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @event.longitude %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @event.latitude %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Attendance:</strong>
  <%= @attendees %>
</p>

<p>
	<strong>Tags (Table Lookup):</strong>
	<% if @tags.nil? %>
		None	
	<% else %>
		<% puts @tags.column_names %>
		<% @tags.each do |tag| %>
			<%= tag.tag_name %>, 		
		<% end %>
	<% end %>
	
</p>

<p>
	<strong>Tags (Event Field):</strong>
	<% tags_array = @event.tags.split(",") %>
	<% tags_array.each do |tag_id| %>
		<%= Tag.find(tag_id).name %>, 
			
	<% end %>
	

	
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
